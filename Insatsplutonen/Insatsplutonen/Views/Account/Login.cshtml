@model Insatsplutonen.Model.Account.LoginModel

@{
    ViewBag.Title = "Insatsplutonen | Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-container">

    <div class="login-header login-caret">

        <div class="login-content">

            <a href="#" class="logo">
                <img src="~/Content/admin/assets/images/smaland_vapen.png" alt="" />
                <br />
                <b>Insatsplutonen.se</b>
            </a>

            <p class="description">Vänligen logga in för att få åtkomst.</p>

            <!-- progress bar indicator -->
            <div class="login-progressbar-indicator">
                <h3>43%</h3>
                <span>loggar in...</span>
            </div>
        </div>

    </div>

    <div class="login-progressbar">
        <div></div>
    </div>
    <div class="login-form">
        <div class="login-content">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form", role = "form", id = "form_login", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                <div class="form-group">
                    @Html.ValidationMessageFor(m => m.UserName)
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="entypo-user"></i>
                        </div>
                        @Html.TextBoxFor(m => m.UserName, new { name = "username", @class = "form-control", id = "username", placeholder = "Användarnamn", autocomplete = "off" })
                    </div>

                </div>

                <div class="form-group">
                    @Html.ValidationMessageFor(m => m.Password)
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="entypo-key"></i>
                        </div>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", name = "password", id = "password", placeholder = "Lösenord", autocomplete = "off" })
                    </div>

                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block btn-login">
                        Logga in
                        <i class="entypo-login"></i>
                    </button>
                </div>
                <button type="submit">Go!</button>


            }
            <div class="login-bottom-links">

                <a href="#" class="link">Glömt ditt lösenord?</a>

                <br />
            </div>
        </div>
    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}